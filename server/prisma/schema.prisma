generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
}

model Vehicle {
  id          String    @id @default(cuid())
  brand       String
  name        String
  price       Int
  fuelType    FuelType
  thumbnail   String
  imageUrls   String[]  // for details page gallery
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  bookmarks   Bookmark[]
  bookings    Booking[]

  @@index([brand])
  @@index([fuelType])
  @@index([price])
  @@map("vehicles")
}

model Bookmark {
  id        String   @id @default(cuid())
  vehicleId String
  createdAt DateTime @default(now())

  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([vehicleId]) // one bookmark per vehicle (simple wishlist)
  @@index([vehicleId])
  @@map("bookmarks")
}

model Booking {
  id            String   @id @default(cuid())
  vehicleId     String
  customerName  String
  customerEmail String
  customerPhone String?
  note          String?
  createdAt     DateTime @default(now())

  vehicle       Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Restrict)

  @@index([vehicleId])
  @@index([customerEmail])
  @@map("bookings")
}